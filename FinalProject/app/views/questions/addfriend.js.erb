


if(<%= @friend.confirmed %> == true)
{
	$("#friend-<%= @friend.student.id %> a").html("Friend Added");
	$('#friend-<%= @friend.student.id %> a').removeAttr('href');
	noty({
	text:"<%= current_student.email %>and <%= @friend.friend.email %> are now friends",
	type:"success",
	timeout:2000
	})
}
else{
	$("#friend-<%= @friend.friend_id %> a").html("Friend Request Sent");
	$('#friend-<%= @friend.friend_id %> a').removeAttr('href');
	noty({
	text:"Successfully Sent Friend Request",
	type:"success",
	timeout:2000
	})
}